{
  "name": "taskflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix && prettier --write .",
